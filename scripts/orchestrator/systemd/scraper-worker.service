[Unit]
Description=Inkdex Scraper Worker
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/root/worker
Environment=SUPABASE_URL=YOUR_SUPABASE_URL
Environment=SUPABASE_SERVICE_KEY=YOUR_SERVICE_KEY
Environment=TAVILY_API_KEY=YOUR_TAVILY_API_KEY
Environment=WORKER_NAME=worker-01
ExecStart=/root/worker/venv/bin/python worker.py
Restart=always
RestartSec=30
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
